<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- bean definitions here -->
	<bean id="stud1" class="com.vijay.usingIndexconstructor.Student">
		<constructor-arg value="vijay" index="0"/>
		<constructor-arg value="21" index="1"/>
		<constructor-arg value="vijay@gmail.com" index="2"/>
	</bean>

	<bean id="stud2" class="com.vijay.usingIndexconstructor.Student">
		<constructor-arg value="vijay" index="2"/>
		<constructor-arg value="21" index="1"/>
		<constructor-arg value="vijay@gmail.com" index="0"/>
	</bean>

	
	<bean id="stud3" class="com.vijay.usingIndexconstructor.Student">
		<constructor-arg value="vijay" type="String"/>
		<constructor-arg value="21" type="int"/>
		<constructor-arg value="vijay@gmail.com" type="String"/>
	</bean>
	
	
</beans>